---
interface Props {
  id: string;
}
---

<section id={Astro.props.id}>
  <slot />
</section>

<style>
  section {
    height: 100vh;
    padding-top: calc(max(40px, 1.5rem) + 40px);
    padding-left: 40px;
    padding-right: 40px;
  }

  @media (max-width: 640px) {
    section {
      padding-left: 20px;
      padding-right: 20px;
    }
  }
</style>
