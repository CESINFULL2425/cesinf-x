---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import Hero from "../views/Hero.astro";
import Sponsors from "../views/Sponsors.astro";
import WhoWeAre from "../views/WhoWeAre.astro";
import BuyTicket from "../views/BuyTicket.astro";
import EventCalendar from "@/views/EventCalendar.tsx";

const navigation = [
  {
    name: "Inicio",
    path: "#",
  },
  {
    name: "Patrocinadores",
    path: "#sponsors",
  },
  {
    name: "¿Quiénes somos?",
    path: "#whoweare",
  },
  {
    name: "Calendario del evento",
    path: "#calendar",
  },
  {
    name: "Compra tu entrada!",
    path: "#buy-ticket",
  },
];
---

<Layout title="Welcome to Astro.">
  <NavBar paths={navigation} />
  <Hero />
  <Sponsors />
  <WhoWeAre />
  <EventCalendar client:only />
  <BuyTicket />
  <Footer />
</Layout>
