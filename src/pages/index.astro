---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import Hero from "../views/Hero.astro";
import Sponsors from "../views/Sponsors.astro";
import WhoWeAre from "../views/WhoWeAre.astro";

const navigation = [
  {
    name: "Inicio",
    path: "#",
  },
  {
    name: "Patrocinadores",
    path: "#sponsors",
  },
  {
    name: "¿Quiénes somos?",
    path: "#whoweare",
  },
];
---

<Layout title="Welcome to Astro.">
  <NavBar paths={navigation} />
  <Hero />
  <Sponsors />
  <WhoWeAre />
  <Footer />
</Layout>
