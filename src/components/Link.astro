---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href}>
  <slot />
</a>

<style>
  a {
    color: #bbb;
    fill: #bbb;
    transition-duration: 600ms;
    text-decoration: none;
  }

  a:hover {
    color: white;
    fill: white;
    filter: drop-shadow(0px 0px 3px rgba(255, 255, 255, 0.4));
  }
</style>
